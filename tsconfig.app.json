{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": [
      "vite/client", 
      "node",
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/@types/**/*.d.ts"
  ]
}
